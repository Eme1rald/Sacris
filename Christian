    <main class="flex-grow container mx-auto p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="section-card p-6" data-section="audio">
                <h2 class="text-xl font-semibold mb-4">Audio Files</h2>
