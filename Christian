    <div class="popup-overlay">
        <div class="popup-content">
            <h3 class="text-2xl font-semibold mb-4"></h3>
            <ul class="list-disc pl-5"></ul>
            <button class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" onclick="closePopup()">Close</button>
        </div>
    </div>

    <script>
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        const popupOverlay = document.querySelector('.popup-overlay');
        const popupContent = document.querySelector('.popup-content');

        themeToggle.addEventListener('change', function() {
            if (this.checked) {
                body.classList.remove('theme-eye-care');
                body.classList.add('theme-sunny');
            } else {
                body.classList.remove('theme-sunny');
                body.classList.add('theme-eye-care');
            }
        });

        // Initialize with Eye Care theme
        body.classList.add('theme-eye-care');

        const sectionContent = {
            audio: [
                "Sermon: The Power of Faith",
                "Worship Album: Heavenly Praises",
                "Bible Study: Book of Psalms",
                "Christian Meditation: Peace in His Presence",
                "Podcast: Living a Christ-Centered Life"
            ],
            video: [
                "Documentary: The Life of Jesus",
                "Animated Series: Bible Stories for Kids",
                "Worship Concert: Hillsong United Live",
                "Christian Movie: The Case for Christ",
                "Video Devotional: 30 Days with God"
            ],
            pictures: [
                "Gallery: Holy Land Tour",
                "Inspirational Quote Images",
                "Christian Art Collection",
                "Bible Verse Wallpapers",
                "Church Events Photo Album"
            ],
            pdf: [
                "E-book: Understanding the Bible",
                "Bible Study Guide: Romans",
                "Christian Living: Practical Faith",
                "Devotional: 365 Days with God",
                "Church History: From Acts to Modern Day"
            ]
        };

        function openPopup(section) {
            const title = popupContent.querySelector('h3');
            const list = popupContent.querySelector('ul');
            title.textContent = section.charAt(0).toUpperCase() + section.slice(1) + " Files";
            list.innerHTML = sectionContent[section].map(item => `<li>${item}</li>`).join('');
            popupOverlay.classList.add('active');
        }

        function closePopup() {
            popupOverlay.classList.remove('active');
        }

        document.querySelectorAll('.section-card').forEach(card => {
            card.addEventListener('click', () => {
                const section = card.dataset.section;
                openPopup(section);
            });
        });

        popupOverlay.addEventListener('click', (e) => {
            if (e.target === popupOverlay) {
                closePopup();
            }
        });
    </script>
</body>
</html>
